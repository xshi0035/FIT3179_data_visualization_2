{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/xshi0035/FIT3179_data_visualization_2/refs/heads/main/consume.csv"
  },
  "config": {
    "padding":20,
    "axis": {
        "labelColor": "white",
        "titleColor": "white"
      },
      "legend": {
        "labelColor": "white",
        "titleColor": "white"
      },
      "title": {
        "color": "white"
      },
      "view": {
        "stroke": null
      },
      "background": "#333"
    },
  "width": "container",
  "height":  "container",
  "params": [
    {
      "name": "ValueFilter",
      "value": 100,
      "bind": { "input": "range", "min": 1, "max": 300, "step": 1 }
    }
  ],
  "transform": [
    {
      "fold": [
        "2008-09",
        "2009-10",
        "2010-11",
        "2011-12",
        "2012-13",
        "2013-14",
        "2014-15",
        "2015-16",
        "2016-17",
        "2017-18",
        "2018-19",
        "2019-20",
        "2020-21",
        "2021-22",
        "2022-23"
      ]
    },
    {
      "filter": "datum.value <= ValueFilter"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "x": {
          "field": "category",
          "type": "nominal",
          "axis": { "grid": false }
        },
        "y": { "field": "key", "type": "nominal", "axis": { "title": "" } },
        "size": {
          "field": "value",
          "type": "quantitative",
          "title": "Demand and energy_Annual electricity consumption",
          "scale": { "rangeMax": 1000 },
          "legend": {
            "clipHeight": 30,
            "title": "Consumption",
            "labelColor": "white",
            "titleColor": "white",
            "symbolFillColor":"white"
          }
        },
        "color": { "field": "category", "type": "nominal",
        "scale": {
            "range":[
                "#ffeda0",
                "#d2b48c",
                "#feb24c",
                "#c6a383",
                "#fd8d3c",
                "#b39472",
                "#f03b20",
                "#a68963",
                "#fc6634",
                "#947858",
                "#e31a1c",
                "#856a4f",
                "#bd0026",
                "#705945",
                "#800026",
                "#5d473b"
              ]
          }
    },
        "tooltip": [
          {
            "field": "key",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "category",
            "type": "nominal",
            "title": "Financial year"
          },
          {
            "field": "value",
            "type": "quantitative",
            "title": "Value"
          }
        ]
      }
    }

  ]
}
